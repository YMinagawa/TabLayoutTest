<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:background="#00000000"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:id = "@+id/rl_detectparticle_config">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:background="#5F000000"
                  android:layout_width="300dp"
                  android:layout_height="200dp"
                  android:layout_centerInParent="true">


        <TextView
            android:id = "@+id/textView_detectminsize"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:text = "DetectMinSize : 10"/>
        <SeekBar
            android:id = "@+id/seekBar_detectminsize"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:max = "1000"
            android:progress = "10"/>
        <TextView
            android:id = "@+id/textView_detectmaxsize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="#FFFFFF"
            android:text = "DetectMaxSize : 1000"/>
        <SeekBar
            android:id = "@+id/seekBar_detectmaxsize"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:max = "10000"
            android:progress = "1000"/>

    </LinearLayout>
</RelativeLayout>