<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_camera"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jp.techacademy.yoshihiro.minagawa.tablayouttest.ui.tabui.camera.CameraActivity">

    <jp.techacademy.yoshihiro.minagawa.tablayouttest.ui.tabui.camera.AutoFitTextureView
        android:id="@+id/texture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id = "@+id/btn_reset"
        android:text = "Reset"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ibtn_shutter"
        android:src = "@drawable/shutter_icon"
        android:background="@null"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ibtn_camera_config"
        android:src = "@drawable/config_icon"
        android:background="@null"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="54dp"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ibtn_ae"
        android:src = "@drawable/ae_button_image"
        android:background="@null"
        android:layout_marginEnd="29dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"/>


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ibtn_af"
        android:src = "@drawable/af_button_image"
        android:background="@null"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/ibtn_ae"
        android:layout_marginEnd="12dp"/>

</RelativeLayout>
